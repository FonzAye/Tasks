files:
    "/etc/cron.d/mycron":
        mode: "000644"
        owner: root
        group: root
        content: |
            */5 * * * * root /var/app/current/.platform/scripts/kill_long_queries.sh >> /var/log/kill_long_queries.log 2>&1

commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/mycron.bak"